pipeline {
    agent any


       tools {
        maven 'maven3'
    }

    stages {
      stage('checkout') {
            steps {
                echo 'Cloning GIT HUB Repo '
				git branch: 'main', url: 'https://github.com/kiraag/kiraag.devops.git'
            }  
        }
		
		
		
	 stage('sonar') {
            steps {
                echo 'scanning project'
                sh 'ls -ltr'
                
                sh ''' mvn sonar:sonar \\
                      -Dsonar.host.url=http://http://3.82.231.231:9000/ \\
                      -Dsonar.login=sqa_b49472371b18d6482a331a7d820e4d3908b3c583'''
            }
    	}
		
		
		
        stage('Build Artifact') {
            steps {
                echo 'Build Artifact'
				sh 'mvn clean package'
            }
        }
		
		
		
        stage('Docker Image') {
            steps {
                echo 'Docker Image building'
				sh 'docker build -t saikirandanda/devopshub:${BUILD_NUMBER} .'
            }
        }
		
		
       stage('Push to Dockerhub') {
            steps {
			 script {
			withCredentials([string(credentialsId: 'Docker-password', variable: 'Dockerhub')]) 
			{
            sh 'docker login -u saikirandanda -p ${dockerhub}'
			
			 }
			   sh 'docker push saikirandanda/devopshub:${BUILD_NUMBER}'
			   
           
				}
				
            }
        }
		
		
    stage('Update Deployment File') {
		
		 environment {
            GIT_REPO_NAME = "kiraag.devops"
            GIT_USER_NAME = "kiran"
        }
		
            steps {
                echo 'Update Deployment File'
				withCredentials([string(credentialsId: 'github-token', variable: 'github')]) 
				{
                  sh '''
                    git config user.email "saikiran1407.sk@gmail.com"
                    git config user.name "kiran"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/devopshub:.*/devopshub:${BUILD_NUMBER}/g" deploymentfiles/deployment.yml
                    git add .
                    
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"

                    git push https://${github}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
				  
                 }
				
            }
        }
		
		
			
    }

}
